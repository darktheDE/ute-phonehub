{
  "info": {
    "name": "UTE PhoneHub - Payment Module",
    "description": "API collection for VNPay payment integration testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Create Order (VNPAY)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 6,\n  \"email\": \"test@example.com\",\n  \"recipientName\": \"Nguyen Van A\",\n  \"phoneNumber\": \"0912345678\",\n  \"shippingAddress\": \"123 Test Street, Ward 1, HCM\",\n  \"note\": \"Test VNPay payment\",\n  \"paymentMethod\": \"VNPAY\",\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 1\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders",
          "host": ["{{base_url}}"],
          "path": ["api", "orders"]
        }
      }
    },
    {
      "name": "2. Create VNPay Payment URL",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": 1,\n  \"amount\": 32990000,\n  \"orderInfo\": \"Thanh toan don hang test\",\n  \"locale\": \"vn\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/payments/vnpay/create",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "vnpay", "create"]
        }
      }
    },
    {
      "name": "3. Get Payment by Order ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/order/1",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "order", "1"]
        }
      }
    },
    {
      "name": "4. Get Payment by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/1",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "1"]
        }
      }
    },
    {
      "name": "5. VNPay Callback (Simulation)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/payments/vnpay/callback?vnp_Amount=3299000000&vnp_BankCode=NCB&vnp_ResponseCode=00&vnp_TransactionStatus=00&vnp_TxnRef=ORD_251207093853&vnp_TransactionNo=14337701&vnp_SecureHash=GENERATED_HASH",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "vnpay", "callback"],
          "query": [
            {
              "key": "vnp_Amount",
              "value": "3299000000"
            },
            {
              "key": "vnp_BankCode",
              "value": "NCB"
            },
            {
              "key": "vnp_ResponseCode",
              "value": "00"
            },
            {
              "key": "vnp_TransactionStatus",
              "value": "00"
            },
            {
              "key": "vnp_TxnRef",
              "value": "ORD_251207093853"
            },
            {
              "key": "vnp_TransactionNo",
              "value": "14337701"
            },
            {
              "key": "vnp_SecureHash",
              "value": "GENERATED_HASH"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "YOUR_ACCESS_TOKEN",
      "type": "string"
    }
  ]
}
