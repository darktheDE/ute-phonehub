############################################################
# Environment variables for UTE PhoneHub
# Đổi tên file này thành `.env` trong thư mục `backend/`
# trước khi chạy `docker compose up`.
#
# Tuyệt đối không commit file `.env` thật lên Git.
############################################################

########################
# Database (Postgres)
########################
POSTGRES_USER=utephonehub
POSTGRES_PASSWORD=utephonehub
POSTGRES_DB=utephonehub_db

# Database Configuration
DB_HOST=localhost
DB_USERNAME=utephonehub
DB_PASSWORD=utephonehub

# Redis Configuration
REDIS_HOST=localhost

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

########################
# Google OAuth2
########################
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-secret-key-must-be-at-least-256-bits-long-for-hs256-algorithm-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# VNPay Configuration (IMPORTANT: Replace with your actual values)
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_RETURN_URL=http://localhost:8081/api/v1/payments/vnpay/return

########################
# Server
########################
SERVER_PORT=8081

########################
# Frontend
########################
# URL base của API backend cho frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8081/api/v1


# Frontend URL Configuration
FRONTEND_URL=http://localhost:3000